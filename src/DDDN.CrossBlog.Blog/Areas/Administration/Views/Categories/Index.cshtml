@model IEnumerable<DDDN.CrossBlog.Blog.Models.Category>
@inject IViewLocalizer Loc

@{
	ViewData["Title"] = Loc["Title"];
}

<h2>@Loc["Haeder"]</h2>
<hr />
@foreach (var item in Model)
{
	<button type="button" class="btn btn-primary">@item.Name</button>
}
<hr />
<form id="formValidation" asp-action="Create">
	<div class="form-group">
		<label for="Name"></label>
		<input type="text" name="Name" id="Name" required maxlength="200" />
	</div>
	<button type="submit" class="btn btn-primary">@Loc["Create"]</button>
</form>