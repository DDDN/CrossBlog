@inject IViewLocalizer Loc
@model IEnumerable<Post>

@{ ViewData["Title"] = Loc["Title"]; }

<div id="posts_newest">
   @foreach (Post item in Model)
   {
      <div id="post_teasers">
         <h1>
            <a asp-action="Show" asp-route-id="@item.PostId">
               @{ await Html.RenderPartialAsync("PostTitlePartialView", item); }
            </a>
         </h1>
         <p id="post_teaser">
            @{ await Html.RenderPartialAsync("PostTeaserPartialView", item); }
         </p>
         <p class="mb-0"><i class="fa fa-calendar"></i> <strong>@item.Writer.Created.ToString("d MMMM yyyy", CultureInfo.CurrentCulture), by @item.Writer?.Name</strong></p>
      </div>
               }
</div>