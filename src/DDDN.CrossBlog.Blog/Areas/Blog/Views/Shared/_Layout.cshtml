<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/images/favicon.ico">
    <title>CrossBlog</title>
    <link href="~/css/blog.bundle.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 pl-0 pr-0" id="sidebar">
                <h1 class="pt-5 text-center"><i class="fa fa-3x fa-book"></i>CrossBlog</h1>
                <div class="align-bottom text-center">
                    <a href="@Url.Content($"~/Blog/{CultureInfo.CurrentCulture.Name}/Home/Index")">Blog</a> |
                    <a href="@Url.Content($"~/Dashboard/{CultureInfo.CurrentCulture.Name}/Posts/Index")">Dashboard</a> |
                    <a href="@Url.Content($"~/Administration/{CultureInfo.CurrentCulture.Name}/BlogInfo/Details")">Administration</a>
                </div>
            </div>
            <div class="col-md-1 d-none d-xl-block mainbg"></div>
            <main class="col-md-7 mainbg" id="main">
                <content class="p-5 m-5">
                    @RenderBody()
                </content>
            </main>
            <div class="col-md-1 d-none d-xl-block mainbg"></div>
        </div>
    </div>
    <script src="~/js/blog.body.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>