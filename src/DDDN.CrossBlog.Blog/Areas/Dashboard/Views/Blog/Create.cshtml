@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc

@{
	ViewData["Title"] = @Loc["CreateBlog"];
	Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h2 class="pb-2">@Loc["CreateBlog"]</h2>

<form>
	<div class="form-group">
		<label for="blogName">@Loc["BlogName"]</label>
		<input type="text" class="form-control" id="blogName" placeholder="@Loc["EnterBlogName"]">
	</div>
	<div class="form-group">
		<label for="blogName">@Loc["BlogCopyright"]</label>
		<input type="text" class="form-control" id="blogName" placeholder="@Loc["EnterBlogCopyright"]">
	</div>
	<button type="submit" class="btn btn-primary">@Loc["BlogSave"]</button>
</form>