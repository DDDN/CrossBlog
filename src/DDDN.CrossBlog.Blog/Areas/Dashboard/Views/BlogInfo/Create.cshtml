@inject IViewLocalizer Loc

@{
	ViewData["Title"] = Loc["CreateBlog"];
}

<h2 class="pb-2">@Loc["CreateBlog"]</h2>
<hr />
<form id="formValidation" asp-action="Create">
	<div class="form-group">
		<label for="BlogInfoName">@Loc["BlogInfoName"]</label>
		<input type="text" id="BlogInfoName" name="BlogInfoName" class="form-control" required maxlength="200">
	</div>
	<div class="form-group">
		<label for="BlogInfoCopyright">@Loc["BlogInfoCopyright"]</label>
		<input type="text" id="BlogInfoCopyright" name="BlogInfoCopyright" class="form-control" required maxlength="200">
	</div>
	<div class="form-group">
		<label for="WriterName">@Loc["WriterName"]</label>
		<input type="text" id="WriterName" name="WriterName" class="form-control" required maxlength="100">
	</div>
	<div class="form-group">
		<label for="WriterMail">@Loc["WriterMail"]</label>
		<input type="email" id="WriterMail" name="WriterMail" class="form-control" required maxlength="100">
	</div>
	<div class="form-group">
		<label for="WriterPassword">@Loc["WriterPassword"]</label>
		<input type="password" id="WriterPassword" name="WriterPassword" class="form-control" required>
	</div>
	<div class="form-group">
		<label for="WriterPasswordCompare">@Loc["WriterPasswordCompare"]</label>
		<input type="password" id="WriterPasswordCompare" name="WriterPasswordCompare" class="form-control" required>
	</div>
	<button type="submit" class="btn btn-primary">@Loc["BlogSave"]</button>
</form>
