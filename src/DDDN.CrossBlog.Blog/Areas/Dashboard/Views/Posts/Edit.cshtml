@model DDDN.CrossBlog.Blog.Areas.Dashboard.Models.PostView
@inject IViewLocalizer Loc
@{
	ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Post</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="PostId" />
			<div class="form-group">
				<label asp-for="State" class="control-label"></label>
				<select asp-for="State" asp-items="@Model.States"></select>
				<span asp-validation-for="State" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Created" class="control-label"></label>
				<input asp-for="Created" class="form-control" />
				<span asp-validation-for="Created" class="text-danger"></span>
			</div>
			<div class="alert alert-secondary">
				<p class="alert-heading">@Loc["FirstHeaderText"]</p>
				<p>@Model.FirstHeaderText</p>
			</div>
			<div class="form-group">
				<label asp-for="AlternativeTitle" class="control-label"></label>
				<textarea id="AlternativeTitle" name="AlternativeTitle" class="form-control disabled" rows="10">@Model.AlternativeTitle</textarea>
				<span asp-validation-for="AlternativeTitle" class="text-danger"></span>
			</div>
			<div class="alert alert-secondary">
				<p class="alert-heading">@Loc["FirstParagraphHtml"]</p>
				@Html.Raw(WebUtility.HtmlDecode((string)Model.FirstParagraphHtml))
			</div>
			<div class="form-group">
				<label asp-for="AlternativeTeaser" class="control-label"></label>
				<textarea id="AlternativeTeaser" name="AlternativeTeaser" class="form-control disabled" rows="10">@Model.AlternativeTeaser</textarea>
				<span asp-validation-for="AlternativeTeaser" class="text-danger"></span>
			</div>
			<input type="submit" value="Save" class="btn btn-default" />
		</form>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
