@using DDDN.CrossBlog.Blog.Routing
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="~/images/favicon.ico">
	<title>CrossBlog DashBoard</title>
	<link href="~/css/dashboard.min.css" rel="stylesheet">
</head>
<body>
	<nav class="navbar navbar-dark bg-dark">
		<a class="navbar-brand pl-1" href="#">CrossBlog Dashboard</a>
		<a href="#sidebar" data-toggle="collapse" class="pull-right"><i class="fa fa-navicon fa-2x"></i></a>
	</nav>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2 col-1 pl-0 pr-0" id="sidebar">
				<a href="#" class="list-group-item" data-parent="#sidebar"><i class="fa fa-desktop"></i><span class="hidden-sm-down-fix">@Localizer["Blog"]</span></a>
				<a href="#" class="list-group-item" data-parent="#sidebar"><i class="fa fa-users"></i><span class="hidden-sm-down-fix">@Localizer["Writers"]</span></a>
				<a href="#" class="list-group-item" data-parent="#sidebar"><i class="fa fa-file-text"></i><span class="hidden-sm-down-fix">@Localizer["Posts"]</span></a>
				<a href="#" class="list-group-item" data-parent="#sidebar"><i class="fa fa-clone"></i><span class="hidden-sm-down-fix">@Localizer["Comments"]</span></a>
				<a href="#" class="list-group-item" data-parent="#sidebar"><i class="fa fa-list"></i><span class="hidden-sm-down-fix">@Localizer["Categories"]</span></a>
			</div>
			<main class="col-md-10 col" id="main">
				<div class="p-5">
					@RenderBody()
				</div>
			</main>
		</div>
	</div>

	<script src="~/js/bodyDefault.min.js"></script>
</body>
</html>