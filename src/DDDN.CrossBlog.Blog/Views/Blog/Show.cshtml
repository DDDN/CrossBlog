@model PostModel
@inject IViewLocalizer Loc

@{
	if (!string.IsNullOrWhiteSpace(Model.FirstHeaderText))
	{
		ViewData["Title"] = Model.FirstHeaderText;
	}
	else if (!string.IsNullOrWhiteSpace(Model.AlternativeTitleText))
	{
		ViewData["Title"] = Model.AlternativeTitleText;
	}
	else
	{
		ViewData["Title"] = Loc["NoPostTitle"];
	}
}

@section Styles {
	<style>@Html.Raw(WebUtility.HtmlDecode(Model.Css))</style>
}

<div class="row">
	<div class="col col-12">
		@Html.Raw(WebUtility.HtmlDecode((string)Model.Html))
	</div>
</div>
<div class="row">
	<div class="col col col-12">
		@await Component.InvokeAsync("Comments", Model)
	</div>
</div>