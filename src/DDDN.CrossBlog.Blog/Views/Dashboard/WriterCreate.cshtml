@model WriterViewModel
@inject IViewLocalizer Loc

@{ ViewData["Title"] = Loc["Title"]; }

<div>
	<h2><i class="fa fa-user"></i> @Loc["Header"]</h2>
	<hr />
	<h4>@Loc["Info"]</h4>
	<form id="formValidation" asp-action="WriterCreate">
		<div class="form-group">
			<label for="Name">@Loc[nameof(Model.Name)]</label>
			<input type="text" asp-for="@Model.Name" class="form-control" autofocus required maxlength="200">
		</div>
		<div class="form-group">
			<label for="Mail">@Loc[nameof(Model.Mail)]</label>
			<input type="email" asp-for="@Model.Mail" class="form-control" required maxlength="100">
		</div>
		<div class="form-group">
			<label for="AboutMe">@Loc[nameof(Model.AboutMe)]</label>
			<textarea asp-for="AboutMe" class="form-control" rows="10" required></textarea>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" asp-for="Administrator">
				@Loc[nameof(Model.Administrator)]
			</label>
		</div>
		<div class="form-group">
			<label for="Password">@Loc[nameof(Model.Password)]</label>
			<input type="password" asp-for="@Model.Password" class="form-control" required>
		</div>
		<div class="form-group">
			<label for="PasswordCompare">@Loc[nameof(Model.PasswordCompare)]</label>
			<input type="password" asp-for="@Model.PasswordCompare" class="form-control" required>
		</div>
		<hr />
		<button type="submit" class="btn btn-primary">@Loc["ButtonCreate"]</button>
		<a asp-action="@nameof(DashboardController.Writers)" class="btn btn-secondary">@Loc["LinkCancel"]</a>
	</form>
</div>