@inject IViewLocalizer Loc
@model WriterViewModel

@{	ViewData["Title"] = Loc["Title"]; }

<div>
	<h2>@Loc["Header"]</h2>
	<hr />
	<h4>@Loc["Info"]</h4>
	<form id="formValidation" asp-action="WriterEdit">
		<input type="hidden" asp-for="WriterId" />
		<div class="form-group">
			<label for="Name">@Loc[nameof(Model.State)]</label>
			<select asp-for="State" asp-items="Model.States" class="form-control" required></select>
		</div>
		<div class="form-group">
			<label for="Name">@Loc[nameof(Model.Name)]</label>
			<input type="text" asp-for="Name" class="form-control" required maxlength="200">
		</div>
		<div class="form-group">
			<label for="Mail">@Loc[nameof(Model.Mail)]</label>
			<input type="email" asp-for="Mail" class="form-control" required maxlength="100">
		</div>
		<div class="form-group">
			<label for="AboutMe">@Loc[nameof(Model.AboutMe)]</label>
			<textarea asp-for="AboutMe" class="form-control" rows="10" required></textarea>
		</div>
		<div class="form-check">
			<label class="form-check-label">
				<input class="form-check-input" type="checkbox" asp-for="Administrator">
				@Loc[nameof(Model.Administrator)]
			</label>
		</div>
		<hr />
		<button type="submit" class="btn btn-primary">@Loc["ButtonEdit"]</button>
		<a asp-action="@nameof(DashboardController.Writers)" class="btn btn-secondary">@Loc["LinkCancel"]</a>
	</form>
</div>

