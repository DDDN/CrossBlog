@inject IViewLocalizer Loc
@model WriterViewModel

@{	ViewData["Title"] = Loc["Title"]; }

<div>
	<h2>@Loc["Header"]</h2>
	<hr />
	<form id="formValidation" asp-action="WriterEdit">
		<input type="hidden" asp-for="WriterId" />
		<div class="form-group">
			<label for="Name">@Loc["State"]</label>
			<select asp-for="State" asp-items="Model.States" class="form-control" required></select>
		</div>
		<div class="form-group">
			<label for="Name">@Loc["Name"]</label>
			<input type="text" asp-for="Name" class="form-control" required maxlength="200">
		</div>
		<div class="form-group">
			<label for="Mail">@Loc["Mail"]</label>
			<input type="email" asp-for="Mail" class="form-control" required maxlength="100">
		</div>
		<div class="form-group">
			<label for="Password">@Loc["Password"]</label>
			<input type="password" asp-for="Password" class="form-control" required>
		</div>
		<div class="form-group">
			<label for="PasswordCompare">@Loc["PasswordCompare"]</label>
			<input type="password" asp-for="PasswordCompare" class="form-control" required>
		</div>
		<button type="submit" class="btn btn-success">@Loc["Edit"]</button>
		<a asp-action="@nameof(DashboardController.Writers)" class="btn btn-warning">@Loc["Cancel"]</a>
	</form>
</div>

