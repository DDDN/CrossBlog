@model  IList<ViewMessage>

<div class="justify-content-center">
	@foreach (var msg in Model)
	{
		var alert = "";
		switch (msg.Type)
		{
			case ViewMessage.MsgType.Info:
				alert = "alert-info";
				break;
			case ViewMessage.MsgType.Warning:
				alert = "alert-warning";
				break;
			case ViewMessage.MsgType.Error:
				alert = "alert-error";
				break;
			default:
				alert = "alert-primary";
				break;
		}

		<div class="alert @alert" role="alert">
			@msg.Text
		</div>
	}
</div>