{
	"ConnectionStrings": {
		// Note that you usually can't use a LocalDB on a machine where it hasn't been created because it was previously created for another user with a different security identifier (SID).
		"CrossBlogLocalDBConnection": "Server=(localdb)\\mssqllocaldb;Database=CrossBlogDB;Trusted_Connection=True;MultipleActiveResultSets=true"
	},
	"Localization": {
		"DefaultCulture": "en-US",
		"OverrideDefaultCultureByAcceptLanguageHeader": true,
		"SupportedCultures": "en-US*|de-DE*|pl-PL*", // The * character means that a natural culture will be redirected to this specific culture.
		"OfficeLocalizerFactoryTypeNamespaceLocation": "DDDN.CrossBlog.Blog",
		"IgnoreOfficeLocalizerFactoryTypeNamespaceLocation": true,
		"WwwrootL10nFolder": "l10n"
	},
	"Seed": {
		"Name": "Your Name",
		"Mail": "crossblog@devdone.net", // Used for login. Have to be changed before initial application start.
		"Copyright": "CrossBlog, Copyright (C) 2017 Lukasz Jaskiewicz", // Replace it with your copyright.
		"MaxBlogTitleLength": 512,
		"MaxBlogTeaserLength": 2048
	},
	"Authentication": {
		"Issuer": "http://devdone.net",
		"SessionDurationInMinutes": 15
	}
}
